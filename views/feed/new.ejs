<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Feed</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/user/<%= currentUser._id %>/feed" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="content" placeholder="content">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/user/<%= currentUser._id %>/feed">Go Back</a>
        </div>

    </div>
</div>


<% include ../partials/footer %>