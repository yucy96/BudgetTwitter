<!DOCTYPE html>
<html>
    <head>
        <title>BudgetTwitter</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/style.css">
    </head>
    <body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <% if (currentUser){ %>
                    <a class="navbar-brand" href="/user/<%= currentUser._id %>/index">Home</a>
                <% } else { %>
                    <a class="navbar-brand" href="/">BudgeTwitter</a>
                <% } %>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if (!currentUser){%>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Sign Up</a></li>
                    <% } else {%>
                        <li><a href="/user/<%= currentUser._id %>/profile">Signed in as <%= currentUser.firstname%></a></li>
                        <li><a href="/logout">Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
