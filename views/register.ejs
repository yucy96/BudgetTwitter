<% include partials/header %>

<div class="container container-edit">
    <h1 class="h1-style">Sign Up</h1>
    <form class="table-head" action="/register" method="POST">
        <div class="form-group row">
            <label for="firstname" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-6">
                <input type="text" class="form-sign" id="firstname" name="user[firstname]" placeholder="First Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="lastname" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-6">
                <input type="text" class="form-sign" id="lastname" name="user[lastname]" placeholder="Last Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-6">
                <input type="email" class="form-sign" id="email" name="user[username]" placeholder="xxx@xxx">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-6">
                <input type="password" class="form-sign" id="password" name="user[password]" placeholder="******">
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-jump">Register</button>
        </div>
    </form>
</div>

<% include partials/footer %>