<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1><%= user.firstname %>'s Profile</h1>
        <% if (!user._id.equals(currentUser._id)){ %>
            <% if (!currentUser.following.includes(user._id)) { %>
                <form class="follow-form" action="/user/<%= user._id %>/profile?_method=PUT" method="POST">
                    <button class="btn btn-success">Follow</button>
                </form>
            <% } else { %>
                <form class="follow-form" action="/user/<%= user._id %>/profile?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Unfollow</button>
                </form>
            <% } %>
        <% } %>
        <a href="/user/<%= user._id %>/following" class="btn btn-primary">Following</a>
        <a href="/user/<%= user._id %>/follower" class="btn btn-primary">Followers</a>
    </header>
</div>

<div class="container">
    <form>
        <div class="form-group row">
            <label for="firstname" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                <input type="text" disabled class="form-control-plaintext" id="firstname" value="<%= user.firstname%>">
            </div>
        </div>
        <div class="form-group row">
            <label for="lastname" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input type="text" disabled class="form-control-plaintext" id="lastname" value="<%= user.lastname%>">
            </div>
        </div>
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="text" disabled class="form-control-plaintext" id="email" value="<%= user.username%>">
            </div>
        </div>
    </form>
    <% if (user._id.equals(currentUser._id)){ %>
    <a class="btn btn-danger" href="/user/<%= user._id %>/profile/edit">Edit your profile</a><br>
    <a class="btn btn-primary" href="/user/<%= user._id %>/feed">See your feeds</a>
    <% } else { %>
    <a class="btn btn-primary" href="/user/<%= user._id %>/feed">See their feeds</a>
    <% } %>
</div>




<% include ../partials/footer %>